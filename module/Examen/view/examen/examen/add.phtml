</div>

<div class="form-group">
    <?= $this->formLabel($unidad) ?>
    <?= $this->formElement($unidad) ?>
    <?= $this->formElementErrors()->render($unidad, ['class' => 'help-block']) ?>
</div>

<?php
echo $this->formSubmit($submit);
echo $this->formHidden($form->get('id'));
echo $this->form()->closeTag();